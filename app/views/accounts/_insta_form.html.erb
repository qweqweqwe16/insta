<link href="https://fonts.googleapis.com/css?family=Indie+Flower|Overpass+Mono" rel="stylesheet">

<div id="wrapper">
  <div class="main-content">
    <div class="header">
      <img src="https://i.imgur.com/zqpwkLQ.png" />
    </div>
    <div class="l-part">


    	<%= form_with(model: account, local: true) do |form| %>
		    <% if account.errors.any? %>
			    <div id="error_explanation" style="background: red">
			      <ul>
			      <% account.errors.full_messages.each do |message| %>
			        <li><%= message %></li>
			      <% end %>
			      </ul>
			    </div>
		  <% end %>
	    	<%= form.text_field :login, {placeholder: "Username", class: "input-1"} %>
	    	<%= form.text_field :password, {placeholder: "Password", class: "input-2", type: "password"} %>
	    	<%= form.submit "Log in", class: "btn" %>
	    <% end %>
    </div>
  </div>
  <div class="sub-content">
    <div class="s-part">
      Don't have an account?<a href="#"> Sign up</a>
    </div>
  </div>
</div>

